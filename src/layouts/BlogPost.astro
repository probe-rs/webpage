---
import type { CollectionEntry } from "astro:content";
import Html from "./Html.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Icon } from "astro-icon/components";
import { SITE_TITLE } from "../consts";

type Props = CollectionEntry<"blog">["data"];

const { title, description, date, authors } = Astro.props;
---

<Html title={`${title} | ${SITE_TITLE}`} description={description}>
  <main
    class="prose dark:prose-invert prose-code:before:content-none prose-code:after:content-none prose-code:bg-slate-500/50 prose-code:border-[1px] prose-code:border-slate-500/50 prose-code:px-1 prose-code:py-0.5 prose-code:rounded-sm w-full max-w-3xl mx-auto"
  >
    <article>
      <h2 class="text-4xl">{title}</h2>
      <p class="italic">
        by {authors.join(", ")} |
        <FormattedDate date={date} />
      </p>
      <slot />
    </article>
  </main>
</Html>
