---
import Html from "../../layouts/Html.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import FormattedDate from "../../components/FormattedDate.astro";
import { posts } from "../../utils";
---

<Html title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <ul class="not-prose">
    {
      posts.map((post) => (
        <li class="odd:bg-gray-100 hover:bg-blue-50 rounded-md p-5">
          <a href={import.meta.env.BASE_URL + "/blog/" + post.id}>
            <h2 class="font-bold underline text-black text-2xl">{post.data.title}</h2>
            <p class="italic text-gray-500 my-1">
              by {post.data.authors.join(", ")} |
              <FormattedDate date={post.data.date} />
            </p>
            <p>{post.data.description}</p>
          </a>
        </li>
      ))
    }
  </ul>
</Html>
